#! /bin/bash

set -xe


#	add add AppImages.

mkdir -p /Applications
mkdir -p /etc/skel/Applications
mkdir -p /etc/skel/.local/bin


{
	printf "%s %s\n" \
		znx					"https://raw.githubusercontent.com/Nitrux/storage/master/AppImages/znx-master-x86_64.AppImage" \
		pnx					"https://raw.githubusercontent.com/Nitrux/storage/master/AppImages/PNX-x86_64.AppImage" \
		vmetal				"https://raw.githubusercontent.com/Nitrux/storage/master/AppImages/VMetal-x86_64.AppImage" \
		app				"https://github.com/AppImageCrafters/appimage-cli-tool/releases/download/v0.1.4/appimage-cli-tool-0.1.4-x86_64.AppImage" \
		appimaged			"https://github.com/AppImage/appimaged/releases/download/continuous/appimaged-x86_64.AppImage" \
		appimagetool		"https://github.com/AppImage/AppImageKit/releases/download/continuous/appimagetool-x86_64.AppImage" \
		wine				"https://github.com/ferion11/Proton_Appimage/releases/download/continuous/proton-linux-x86-v4.2-PlayOnLinux-x86_64.AppImage"

	printf "%s %s\n" \
		kdenlive			"https://download.kde.org/stable/kdenlive/20.12/linux/kdenlive-20.12.0-x86_64.appimage" \
		libreoffice			"https://libreoffice.soluzioniopen.com/stable/standard/LibreOffice-fresh.standard-x86_64.AppImage" \
		gimp				"https://github.com/aferrero2707/gimp-appimage/releases/download/continuous/GIMP_AppImage-git-2.10.23-20210114-x86_64.AppImage" \
		waterfox-current	"https://download.opensuse.org/repositories/home:/hawkeye116477:/waterfox/AppImage/waterfox-current-latest-x86_64.AppImage" \
		mpv					"https://raw.githubusercontent.com/Nitrux/storage/master/AppImages/mpv-0.32.0-1ubuntu1-x86_64.AppImage" \
		inkscape			"https://inkscape.org/gallery/item/21590/Inkscape-3bc2e81-x86_64.AppImage" \
		lmms				"https://github.com/LMMS/lmms/releases/download/v1.2.2/lmms-1.2.2-linux-x86_64.AppImage" \
		buho				"https://download.kde.org/stable/maui/1.2.0/appimages/buho-stable-v1.2-amd64.AppImage" \
		index				"https://download.kde.org/stable/maui/1.2.0/appimages/index-stable-v1.2-amd64.AppImage" \
		nota				"https://download.kde.org/stable/maui/1.2.0/appimages/nota-stable-v1.2-amd64.AppImage" \
		pix					"https://download.kde.org/stable/maui/1.2.0/appimages/pix-stable-v1.2-amd64.AppImage" \
		station				"https://download.kde.org/stable/maui/1.2.0/appimages/station-stable-v1.2-amd64.AppImage" \
		vvave				"https://download.kde.org/stable/maui/1.2.0/appimages/vvave-stable-v1.2-amd64.AppImage"
} | {
	while read name url; do
		axel -a -q -o /Applications/$name "$url"
	done
}

chmod +x /Applications/*

mv /Applications/appimaged /etc/skel/.local/bin
